{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "lib": ["es6"],
    "strict": false, // Set strict type-checking to false
    "noEmitOnError": false, // Generate outputs even if there are errors
    "skipLibCheck": true // Skip type checking of declaration files (*.d.ts)
  },
  "exclude": ["node_modules", "**/*.spec.ts", "**/__tests__/**"]
}
