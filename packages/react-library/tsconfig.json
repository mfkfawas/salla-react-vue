{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "lib": ["dom", "es2015"],
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es2015",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "declarationDir": "./dist/types",
    "strict": false, // Set strict type-checking to false
    "noEmitOnError": false, // Generate outputs even if there are errors
    "skipLibCheck": true // Skip type checking of declaration files (*.d.ts)
  },
  "include": ["lib"],
  "exclude": ["node_modules"]
}
